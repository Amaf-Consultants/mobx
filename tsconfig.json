{
    "compilerOptions": {
        "target": "es5",
        "rootDir": "src",
        "outDir": "lib",
        "sourceMap": false,
        "declaration": true,
        "module": "commonjs",
        "removeComments": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "noImplicitThis": false,
        "experimentalDecorators": true,
        "lib": ["es6"]
    },
    "include": ["src/**/*.ts"]
}
